    "version": "0.2.0",
    "configurations": [
        {
            "name": "Common UnitTest - all tests",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "/usr/local/bin/bundle",
            "args": ["exec", "m", "-r", "${workspaceFolder}/tests"]
        },
        {
            "name": "Common UnitTest - active spec file only",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "/usr/local/bin/bundle",
            "args": ["exec", "m", "-r", "${relativeFile}"]
        }
    ]
}
